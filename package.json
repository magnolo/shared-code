{
  "name": "@23degrees/shared-code",
  "version": "2.0.0",
  "description": "23degrees Shared Code",
  "main": "dist/node.js",
  "browser": "dist/browser.js",
  "module": "dist/node.js",
  "repository": "git@bitbucket.org:23degrees-io/23shared-code.git",
  "author": "Gregor Steiner <spacegregor@gmail.com>",
  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'src/**/*.js' && git add dist/*.js"
    }
  },
  "scripts": {
    "babel": "babel src -d dist",
    "build": "yarn build-browser && yarn build-node",
    "build-browser": "webpack --config webpack.config.js --browser || exit 0",
    "build-node": "webpack --config webpack.config.js || exit 0",
    "dev": "nodemon --delay 500ms --legacy-watch --watch src --exec 'yarn build'",
    "webpack-watch": "webpack --config webpack.config.js --watch --poll 500"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "chroma-js": "^2.0.6",
    "d3": "^5.12.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.7.4",
    "nanoid": "^2.1.2",
    "slugify": "^1.3.5",
    "speakingurl": "^14.0.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.3",
    "@babel/core": "^7.6.3",
    "@babel/node": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
    "@babel/plugin-transform-regenerator": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "babel-loader": "^8.0.6",
    "husky": "^3.0.8",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
