{
  "name": "@23degrees/shared-code",
  "version": "2.0.0",
  "description": "23degrees Shared Code",
  "main": "dist/node.js",
  "browser": "dist/browser.js",
  "module": "dist/node.js",
  "repository": "git@bitbucket.org:23degrees-io/23shared-code.git",
  "author": "Gregor Steiner <spacegregor@gmail.com>",
  "license": "MIT",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'src/**/*.js' && git add dist/*.js"
    }
  },
  "scripts": {
    "clean": "git checkout --theirs dist/*",
    "ping": "date > ping/update.js",
    "babel": "babel src -d dist",
    "build": "yarn build-browser && yarn build-node && yarn ping",
    "build-browser": "webpack --config webpack.config.js --browser || exit 0",
    "build-node": "webpack --config webpack.config.js || exit 0",
    "dev": "nodemon -L --delay 500ms --watch src --exec 'yarn build'",
    "webpack-watch": "webpack --config webpack.config.js --watch --poll 500"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "chroma-js": "^2.1.0",
    "d3": "^5.15.0",
    "deep-object-diff": "^1.1.0",
    "js-base64": "^2.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.8.9",
    "nanoid": "^2.1.10",
    "slugify": "^1.3.6",
    "speakingurl": "^14.0.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-loader": "^8.0.6",
    "husky": "^4.2.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
